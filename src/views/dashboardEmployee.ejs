<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/slick.css">
    <script src="https://kit.fontawesome.com/ccff9e51ab.js" crossorigin="anonymous"></script>

    <title>ElectroHouse</title>
</head>

<body>
    <header class="menu-principal">
        <main>
            <div class="header-1">
                <div class="logo">
                    <img src="../images/logo.png">
                </div>
                <div class="redes-sociais">
                    <ul>
                        <li><a href="#"><img src="../images/rede.png"></a></li>
                        <li><a href="#"><img src="../images/facebook.png"></a></li>
                        <li><a href="#"><img src="../images/twitter.png"></a></li>
                        <li><a href="#"><img src="../images/linkedin.png"></a></li>
                        <div class="icon-logout">
                            <a href="/">
                                <i class="fa-solid fa-right-from-bracket"></i>
                            </a>
                        </div>
                    </ul>
                </div>
            </div>
        </main>
    </header>
    <main class="menu-urls">
        <div class="header-2">
            <div class="menu">
                <div class="position">
                    <ul>
                        <li><a href="/cadastroProdutos">Cadastro de Produtos</a></li>
                        <li><a href="#">Servi√ßos Diarios</a></li>
                        <li><a href="#">Nossas Parcerias</a></li>
                        <li><a href="/listar-vendas">Consulta de Vendas</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </main>
    <div class="cards-products">
        <% products.forEach(product=> { %>
            <div class="card" style="width: 18rem;">
                <div class="cards-image">
                    <img src="<%= product.imagem %>" class="card-img-top" alt="...">
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <%= product.nome %>
                    </p>
                    <div class="cards-txt">
                        <b>
                            <%= product.valor %>
                        </b>
                        <span>Quant.: <b>
                                <%= product.quantidade %>
                            </b></span>
                    </div>
                    <p class="card-text">
                        <%= product.descricao %>
                    </p>
                    <div class="container-btn delete-cards">
                        <div class="d-grid gap-2 col-6 mx-auto ">
                            <button class="btn btn-primary" type="submit">Excluir</button>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>
</body>

</html>