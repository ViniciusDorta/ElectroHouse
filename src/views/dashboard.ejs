<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/slick.css">
    <script src="https://kit.fontawesome.com/ccff9e51ab.js" crossorigin="anonymous"></script>

    <title>ElectroHouse</title>
</head>

<body>
    <header class="menu-principal">
        <main>
            <div class="header-1">
                <a href="/dashboard" class="logo">
                    <img src="../images/logo.png">
                </a>
                <div class="redes-sociais">
                    <ul>
                        <li><a href="#"><img src="../images/rede.png"></a></li>
                        <li><a href="#"><img src="../images/facebook.png"></a></li>
                        <li><a href="#"><img src="../images/twitter.png"></a></li>
                        <li><a href="#"><img src="../images/linkedin.png"></a></li>
                        <div class="icon-logout">
                            <a href="/">
                                <i class="fa-solid fa-right-from-bracket"></i>
                            </a>
                        </div>
                    </ul>
                </div>
            </div>
        </main>
    </header>
    <main class="menu-urls">
        <div class="header-2">
            <div class="menu">
                <div class="position">
                    <ul>
                        <li><a href="/dashboard">Inicio</a></li>
                        <li><a href="/minhasCompras">Minhas Compras</a></li>
                        <div class="busca busca-dashboard">
                            <input placeholder="Pesquisar Produtos" type="text" />
                        </div>
                    </ul>
                </div>
            </div>
        </div>
    </main>
    <div class="cards-products">
        <% products.forEach(product=> { %>
            <div class="card" style="width: 18rem;">
                <div class="cards-image">
                    <img src="<%= product.imagem %>" class="card-img-top" alt="...">
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <%= product.nome %>
                    </p>
                    <div class="cards-txt">
                        <b>
                            R$ <%= product.valor %>
                        </b>
                        <span><b>
                                <%= product.quantidade %>
                            </b> Unidades restantes</span>
                    </div>
                    <div class="container-btn wrap-input">
                        <a class="btn btn-primary" href="/buyScreen/<%= product.id %>">Detalhes</a>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>
</body>

</html>